<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <ul class="list-unstyled">
      {{#each foldedContent as |prosecutor|}}
        <li>
          <h4>
            {{#link-to 'prosecutor' prosecutor}}
              {{prosecutor.name.value}}
            {{/link-to}}

            <small class="pull-right">
              {{prosecutor-metadata prosecutor=prosecutor}}
              {{t 'property_declaration' count=prosecutor.property_declarations.length}}
            </small>
          </h4>
        </li>
      {{/each}}
    </ul>

    <br>

    {{#if canUnfoldMore}}
      <h4 class="text-center">
        <a href="#" {{action 'unfoldMore'}}>{{t 'components.prosecutors-list.unfold_more'}}</a>
      </h4>
    {{/if}}
  </div>
</div>
